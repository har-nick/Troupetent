import kotlin.Int;

CREATE TABLE LibrarySummary (
    itemCount INTEGER AS Int NOT NULL,
    ownerId INTEGER NOT NULL PRIMARY KEY,
    FOREIGN KEY(ownerId) REFERENCES Account(id) ON DELETE CASCADE
);

load: SELECT * FROM LibrarySummary WHERE ownerId = (?) LIMIT 1;
save: REPLACE INTO LibrarySummary VALUES (?, ?);
delete: DELETE FROM LibrarySummary WHERE ownerId = (?);
